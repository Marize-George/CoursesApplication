<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="50dp"
    app:cardElevation="40dp"
    android:layout_margin="15dp"
    android:id="@+id/cardView"
    app:cardCornerRadius="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagePaymentCourse"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/flutter"/>


        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="10sp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="5sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/flutterPaymentCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flutter Fundamentals"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:drawableEnd="@drawable/star"
                android:id="@+id/ratePaymentCourse"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lessonPaymentCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 Lessons"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/paymentPaymentCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="300$"/>


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>