<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentFragment">

    <!-- TODO: Update blank fragment layout -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/flutter"/>


            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:alpha="0.2"
                android:layout_marginLeft="10dp"
                android:layout_marginVertical="10sp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="5sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/flutterPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flutter Fundamentals"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:drawableEnd="@drawable/star"
                    android:id="@+id/ratePayment"
                    android:textStyle="bold"
                    android:layout_marginTop="10sp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lessonPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 Lessons"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/paymentCoursePayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="300$"/>
                <ImageButton
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/delete"
                    />
            </LinearLayout>



        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerItem"
            android:layout_width="400dp"
            android:layout_height="700dp"
            android:layout_marginTop="200dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="500sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/payNow"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="Pay Now"
                android:textSize="25dp"
                android:layout_marginBottom="20sp"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="payment"
                android:layout_marginBottom="30sp"
                android:layout_marginLeft="100sp"
                android:gravity="bottom"
                android:textStyle="bold"
                android:textSize="25dp"
                />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
</FrameLayout>